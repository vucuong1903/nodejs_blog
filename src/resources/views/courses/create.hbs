<div class="mt-4">
    <h3>Khoá học</h3>
    <form method="post" action="/courses/store">
        <div class="form-group">
            <label for="name" class="form-label">Tên khoá học</label>
            <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description" />
        </div>
        <div class="form-group">
            <label for="videoId" class="form-label">Id khoá học</label>
            <input type="text" class="form-control" id="videoId" name="videoId" />
        </div>
        <button type="submit" class="btn btn-primary">Thêm khoá học</button>
    </form>
</div>